package Sunday;

public class Patterns {
	
	private static void pattern(int num) {
//		for(int i=0;i<=num;i++) {
//			for(int j=num;j<=i;j--) {
//				System.out.print("*");
//			}
//			System.out.println("");
//		}
		for(int i=0;i<=num;i++) {
			for(int j=0;j<=i;j++) {
				System.out.print("*");
			}
			System.out.println("");
		}
		
	}
	
	public static void main(String[] args) {
		pattern(5);
	}
	

}
